# {{ ansible_managed }}
server {
    listen       443 ssl;
    server_name  localhost {{ ansible_hostname }} {{ ansible_hostname }}.{{ domain }}.mutualink.net;

    root /var/www/html;

    ssl_certificate      /etc/nginx/ssl/{{ domain }}.mutualink.net.crt;
    ssl_certificate_key  /etc/nginx/ssl/{{ domain }}.mutualink.net.key;

    ssl_session_cache    shared:SSL:1m;
    ssl_session_timeout  5m;

    ssl_ciphers  HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers  on;

    location /ansible_key {
    }
}